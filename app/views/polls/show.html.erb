<header class="poll-description nicebox">
  <div class="nicebox-head">
    <h1>Where should we go out to dinner?</h1>
  </div>
</header>


<section class="board">
  <div class="sidebar">

    <div class="add-comment">
      <input type="text" placeholder="Add a comment">
      <a href="#" class="btn btn-blue">Send</a>
    </div>

    <div class="comment">
      <p class="comment-name">Andrew</p>
      <p class="comment-text">Hello World! This is a comment.</p>
    </div>

    <div class="comment">
      <p class="comment-name">Rodney</p>
      <p class="comment-text">I DISAGREE WITH YOU BECAUSE OF REASONS</p>
    </div>

  </div><!-- .sidebar -->


  <div class="ideas">

    <div class="idea">
      <h3 class="idea-title">South Coast</h3>
      <div class="votes-container">
        <a href="#" class="vote"></a>
        <span class="vote-count">6</span>
      </div>
    </div>

    <div class="idea">
      <h3 class="idea-title">Subway</h3>
      <div class="votes-container">
        <a href="#" class="vote"></a>
        <span class="vote-count">0</span>
      </div>
    </div>

    <div class="idea">
      <h3 class="idea-title">Norton's</h3>
      <div class="votes-container">
        <a href="#" class="vote"></a>
        <span class="vote-count">3</span>
      </div>
    </div>

    <div class="idea">
      <h3 class="idea-title">Saigon</h3>
      <div class="votes-container">
        <a href="#" class="vote"></a>
        <span class="vote-count">4</span>
      </div>
    </div>

  </div><!-- .ideas -->

</section>



<section class="add-idea">
  <div class="container">
    <div class="row">

      <div class="span-8 offset-4">
        <form>
          <label for="name">Name</label>
          <input type="text" placeholder="Enter your name">

          <label for="idea">Idea</label>
          <input type="text" placeholder="Enter your idea">

          <input type="submit" class="btn btn-blue btn-large" value="Add Idea">
        </form>
      </div>

    </div>
  </div>
</section>
